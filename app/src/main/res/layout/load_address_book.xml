<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_address_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/emp_number"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Emp Id"
                android:textColor="#515050"
                android:textSize="23dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/emp_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:text="emp_name"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/emp_designation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:text="emp_designation"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/emp_branch_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:text="emp_branch_name"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/emp_branch_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:text="emp_branch_code"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="2">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="19dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_telephone" />

                    <TextView
                        android:id="@+id/emp_office_no"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:text="emp_office_no"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="19dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_smartphone_call" />

                    <TextView
                        android:id="@+id/emp_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:text="emp_mobile_no"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="15dp" />
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:weightSum="2">-->

                    <!--<ImageView-->
                        <!--android:layout_width="21dp"-->
                        <!--android:layout_height="19dp"-->
                        <!--android:layout_margin="5dp"-->
                        <!--android:src="@drawable/ic_gmail" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/emp_email"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:padding="5dp"-->
                        <!--android:text="emp_email"-->
                        <!--android:textColor="@android:color/primary_text_light"-->
                        <!--android:textSize="15dp" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>